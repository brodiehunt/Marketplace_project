<%# This is for carousel %>
<div class="carousel-container d-flex justify-content-center">
  <div class="my-3 col-10"> 
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active" style="max-height: 400px;">
          <img class="d-block w-100" style="max-height: 400px;" src="https://marketplace-public-bucket.s3-ap-southeast-2.amazonaws.com/mountain.png" alt="First slide">
        </div>
        <div class="carousel-item" style="max-height: 400px;">
          <img class="d-block w-100" style="max-height: 400px;" src="https://marketplace-public-bucket.s3-ap-southeast-2.amazonaws.com/dreamstime_m_103202288-duotone.jpg" alt="Second slide">
        </div>
        <div class="carousel-item" style="max-height: 400px;">
          <img class="d-block w-100" style="max-height: 400px;" src="https://marketplace-public-bucket.s3-ap-southeast-2.amazonaws.com/ski.jpg" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
